# Optional: enable real OpenAI calls (if unset, mock mode is used)
# OPENAI_API_KEY=...
OPENAI_MODEL=gpt-5
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

CHUNK_SIZE=800
CHUNK_OVERLAP=120

# Weaviate (required for real vector storage)
# WEAVIATE_API_KEY=...      # optional for local; required for cloud
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8091
WEAVIATE_SECURE=false
WEAVIATE_CLASS=Chunk
